<div>
<table>
  <thead>
    <tr>
      <th>Recipient</th>
      <th>Sender</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @sent_follow_requests.any? %>
      <% @sent_follow_requests.each do |follow_request| %>
        <tr>
          <td><%= follow_request.recipient.username %></td>
          <td><%= follow_request.sender.username %></td>
          <td><%= follow_request.status %></td>
          <td><%= link_to 'Show', follow_request %></td>
          <td><%= link_to 'Edit', edit_follow_request_path(follow_request) %></td>
          <td><%= link_to 'Destroy', follow_request, data: { turbo_method: :delete }, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else %>
    <tr>
      <td colspan="6">No follow requests available.</td>
    </tr>
<% end %>
  </tbody>
</table>
</div>
