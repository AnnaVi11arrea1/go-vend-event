<div class="darkcard">
  <h4>Follow Request</h4>

  <div>
    <p>
      <strong>Recipient:</strong>
      <%= @follow_request.recipient.username %>
    </p>

    <p>
      <strong>Sender:</strong>
      <%= @follow_request.sender.username %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @follow_request.status %>
    </p>
    </div>

      <div>
        <% if @user == @follow_request.recipient %>
        <%= button_to "Accept", accept_follow_request_path(@follow_request), method: :patch, class:"btn-pri" %>
        <%= button_to "Reject", reject_follow_request_path(@follow_request), method: :patch, class:"btn-dang" %>
        <% end %>

      </div>
    </div>
        <button class="btn-in" ><%= link_to "Back to follow requests", follow_requests_path, style:"color:black" %></button>
