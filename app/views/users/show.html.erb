  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1><%= @user.username %>'s Profile</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <h2>Personal Information</h2>
        <p><strong>First Name:</strong> <%= @user.first_name %></p>
        <p><strong>Last Name:</strong> <%= @user.last_name %></p>
        <p><strong>Email:</strong> <%= @user.email %></p>
      </div>
      <div class="col-md-6">
        <h2>Hosted Events</h2>
          <ul>
            <% @user.events.each do |event| %>
              <li><%= link_to event.name, event_path(event) %></li>
            <% end %>
          </ul>
            <% if !@user.events.any? %>
            <p><%= @user.first_name %> has not created any events yet.</p>
            <% end %>
        <h2>Vendor Events</h2>
          <ul>
            <% @user.vendorevents.each do |event| %>
              <li><%= link_to event.name, event_path(event) %></li>
            <% end %>
          </ul>
            <% if !@user.vendorevents.any? %>
            <p><%= @user.first_name %> has not been a vendor at any events yet.</p>
            <% end %>
      </div>
    </div>
  </div>
