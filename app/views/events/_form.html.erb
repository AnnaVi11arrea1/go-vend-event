<div class="darkcard intro">
<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <h1 class="darktitle">Editing <%= @event.name %></h1>
  <div class="form-inputs">
    <%= f.input :application_due_at, as: :date %>
    <%= f.input :ends_at, as: :date %>
    <%= f.input :started_at, as: :date %>
    <%= f.input :name %>
    <%= f.input :information, as: :text %>
    <%= f.input :application_link, as: :string %>
    <%= f.input :tags %>
    <%= f.input :address, as: :string %>

    <%= f.input :photo, as: :file %>
    <div class="form-actions">
      <%= f.button :submit, class:"event_btn" %>
    </div>
  <% end %>

</div>
    <%= link_to "Back to events", events_path, class:"btn-in" %>
</div>
