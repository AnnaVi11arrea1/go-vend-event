<nav class="navbar sticky-top navbar-expand-lg nav justify-content-between pt-3">
  <div class="col align-items-center">
    <div class="d-flex">
      <%= image_tag "favicon.png", alt:"vendor booth", width:"50px", height:"50px" %> 
      <h2><%= link_to "goVend", root_url, class:"nav-title" %></h2>
    </div>
    <p class="subtitle">Connecting Vendors and Events</p>
    </div>
  </div>

<div class="topnav sticky-top" id="myTopnav">
    <% if current_user.present? %>
        <%= link_to "Search", events_path %>
        <%= link_to "My Events", vendor_events_path  %>
        <%= link_to "Profile", user_path(current_user)%>
        <%= link_to "Host", new_event_path %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
        <%= link_to "Feed", feed_path(current_user) %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path %>
        <%= link_to "Sign Up", new_user_registration_path %>
      <% end %>
  <a href="javascript:void(0);" class="icon" onclick="myFunction()">
    <i class="fa fa-bars"></i>
  </a>
</div>
</nav>

<script>
  /* Toggle between adding and removing the "responsive" class to topnav when the user clicks on the icon */
function myFunction() {
  var x = document.getElementById("myTopnav");
  if (x.className === "topnav") {
    x.className += " responsive";
  } else {
    x.className = "topnav";
  }
}
</script>
